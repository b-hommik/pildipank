                                @*<a class="dropdown-item" href="~/Pictures/Create"> Add picture</a>*@
                                @Html.ActionLink("Add Picture", "Create", "Pictures", null, new { @class = "btn" })

                            </div>
                        </li>
                        @*<li> @Html.ActionLink("Pictures", "Index", "Pictures") </li>
                <li> @Html.ActionLink("My Pictures", "IndexUser", "Pictures") </li>*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                ALBUMS
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @*<a class="dropdown-item" href="~/Albums/Index"> Albumid</a>*@
                                @Html.ActionLink("Albums", "Index", "Albums", null, new { @class = "btn" })
                                <div class="dropdown-divider"></div>
                                @*<a class="dropdown-item" href="~/Albums/IndexUser"> My Albums</a>*@
                                @Html.ActionLink("My Albums", "IndexUser", "Albums", null, new { @class = "btn" })
                            </div>
                        </li>
                        @*<li> @Html.ActionLink("Albums", "Index", "Albums") </li>
                <li> @Html.ActionLink("My Albums", "IndexUser", "Albums") </li>*@
                    }
                    @if (User.IsInRole("Admin"))
        {

            <li>@Html.ActionLink("USERS", "Index", "AspNetUsers")</li>
            <li>@Html.ActionLink("CATEGORIES", "Index", "Categories")</li>

}

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    <div class="generate-page-header">
        <img src="@Url.Action("Content", "Datafiles", new {Id=61})">
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ParemEsimene </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
