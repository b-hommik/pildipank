                                PICTURES
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @*<a class="dropdown-item" href="~/Pictures/Index"> Pictures</a>*@
                                @Html.ActionLink("Pictures", "Index", "Pictures", null, new { @class = "btn" })
