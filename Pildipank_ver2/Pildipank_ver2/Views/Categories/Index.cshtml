@model IEnumerable<Pildipank_ver2.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>*@
        <th>
            @*@Html.DisplayNameFor(model => model.Name)*@
            Category
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Name)*@
            Pictures
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.AspNetUser.FirstName)*@
            User
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Name)
    
        </td>
        <td>
            <span class="glyphicon glyphicon-picture"></span> <span class="badge badge-success"> @item.Pictures.Count() </span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.FirstName)
        </td>
        @if (User.IsInRole("Admin"))
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
}
    </tr>
}

</table>
